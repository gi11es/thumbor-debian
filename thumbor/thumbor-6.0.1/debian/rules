#!/usr/bin/make -f
export PYBUILD_NAME=pyres
export PYBUILD_TEST_NOSE=1
export PYBUILD_BEFORE_TEST=redis-server --port 6668 --requirepass hey_you > /dev/null & echo "$$!" > thumbor-pybuild-redis-pid
export PYBUILD_AFTER_TEST=cat thumbor-pybuild-redis-pid | xargs /bin/kill ; rm thumbor-pybuild-redis-pid
export PYBUILD_TEST_ARGS=-s
export LC_ALL=C.UTF-8

%:
	dh $@ --with python2,systemd --buildsystem=pybuild

override_dh_clean:
	rm -rf thumbor.egg-info
	if [ -e "thumbor-pybuild-redis-pid" ] ; then cat thumbor-pybuild-redis-pid | xargs /bin/kill ; rm thumbor-pybuild-redis-pid ; fi
	dh_clean

override_dh_install:
	dh_install
	mkdir debian/thumbor/etc
	install -p -o root -g root -m 644 debian/thumbor.conf debian/thumbor/etc
