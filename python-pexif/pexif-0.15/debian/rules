#!/usr/bin/make -f

PKG_EXAMPLE_DIR="/usr/share/doc/python-pexif/examples/"

%:
	dh $@ --with python2 --buildsystem=python_distutils

override_dh_auto_install:
	python setup.py install --root=debian/python-pexif --install-layout=deb --install-scripts=$(PKG_EXAMPLE_DIR)

override_dh_auto_test:
	PYTHONPATH="${PYTHONPATH}:${CURDIR}" python test/test.py
	dh_auto_test -- --test-pytest

override_dh_auto_clean:
	find . -name "*.pyc" -delete
	dh_auto_clean
